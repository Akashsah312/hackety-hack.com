<h1>New program</h1>

<table>
<% form_for(@program) do |f| %>
  <%= f.error_messages %>

  <tr>
    <td><%= f.label :name %></td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td><%= f.label :description %></td>
    <td><%= f.text_field :description %></td>
  </tr>
  <tr>
    <td><%= f.label :text %></td>
    <td><%= f.text_area :text %></td>
  </tr>
  <tr>
    <td></td><td><%= f.submit 'Create' %></td>
  </tr>
<% end %>
</table>


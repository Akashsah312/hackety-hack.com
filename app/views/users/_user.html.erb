<table>
<% form_for @user do |form| %>  
<%= form.error_messages %>  
<tr>
   <td><%= form.label :username, "Username" %></td>
   <td><%= form.text_field :username %></td>
</tr>
<tr>
   <td><%= form.label :email, "Email" %></td>
   <td><%= form.text_field :email %></td>
</tr>
<tr>
   <td><%= form.label :password, "Password" %></td>
   <td><%= form.password_field :password %></td>
</tr>
<tr>
   <td><%= form.label :password_confirmation, "Confirm Password" %></td>
   <td><%= form.password_field :password_confirmation %></td>
</tr>
<% unless @user.api_key.nil? %>
<tr>
   <td><%= form.label :api_key, "Secret Key" %></td>
   <td><%= @user.api_key %></td>
</tr>
<% end %>
<tr>
   <td><%= form.label :link %></td>
   <td><%= form.text_field :link %></td>
</tr>
<tr>
   <td><%= form.label :about %></td>
   <td><%= form.text_area :about %></td>
</tr>
<tr>
   <td></td><td><%= form.submit "Submit" %></td>
</tr>
<% end %>  
</table>
